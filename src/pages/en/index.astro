---
import Base from "../../layouts/base.astro";
const title = "INFUSION — Your vision, accelerated by AI — fast.";
const description = "From branding to front-end architecture, we go beyond design to become your strategic growth partner, building websites that scale with you.";
---
<Base {title} {description}>
  <div class="wrap">
    <header class="nav">
      <div class="brand">
        <img src="/brand/infusion-logo.webp" alt="INFUSION" height="28" />
        <strong>INFUSION</strong>
      </div>
      <nav class="navlinks">
        <a href="#work">Work</a>
        <a href="#services">Services</a>
        <a href="#about">About</a>
        <a href="#contact">Contact</a>
      </nav>
    </header>

    <section class="hero">
      <div class="left">
        <span class="badge">AI-first • Astro + Vercel • Fast</span>
        <h1>Your vision, accelerated by AI — fast.</h1>
        <p>From branding to front-end architecture, we go beyond design to become your strategic growth partner, building websites that scale with you.</p>
        <div class="hero-cta">
          <a class="btn btn-primary" href="#contact">Get started</a>
          <a class="btn btn-ghost" href="#work">View our work</a>
        </div>
      </div>
      <div class="right">
        <div class="mock card">
          <!-- Replace with real hero visual -->
          <svg width="200" height="200" viewBox="0 0 200 200" fill="none" xmlns="http://www.w3.org/2000/svg">
            <defs>
              <linearGradient id="g" x1="0" y1="0" x2="1" y2="1">
                <stop offset="0%" stop-color="#00E0E6"/>
                <stop offset="100%" stop-color="#1378FF"/>
              </linearGradient>
            </defs>
            <path d="M100 20c44 0 80 36 80 80s-36 80-80 80S20 144 20 100" stroke="url(#g)" stroke-width="14" stroke-linecap="round" fill="none"/>
            <path d="M100 45c30 0 55 25 55 55s-25 55-55 55-55-25-55-55" stroke="url(#g)" stroke-width="10" stroke-linecap="round" fill="none"/>
            <circle cx="100" cy="100" r="8" fill="#fff" opacity=".9"/>
          </svg>
        </div>
      </div>
    </section>

    <section id="services" class="wrap">
      <div class="grid-3">
        <div class="card">
          <h3>Brand Systems</h3>
          <p>Logo, color, and typography packages built for scale.</p>
        </div>
        <div class="card">
          <h3>AI Web Architecture</h3>
          <p>Astro + Vercel websites, lightning fast, SEO-ready, and easy to manage.</p>
        </div>
        <div class="card">
          <h3>Strategic Growth Layer</h3>
          <p>Automation, CRM integration, and AI tools that work quietly in the background.</p>
        </div>
      </div>
    </section>

    <footer style="opacity:.7; padding:40px 0;">
      <small>© {new Date().getFullYear()} INFUSION. All rights reserved.</small>
    </footer>
  </div>
</Base>
